{
    "autoclose": false,
    "colorscheme": "material-tc",
    "diffgutter": true,
    "eofnewline": false,
    "fzfarg": "--layout=reverse  --preview 'cat {}' --color=bw",
    "mkparents": true,
    "parsecursor": true,
    "pluginrepos": [
        "https://raw.githubusercontent.com/MuratovAS/micro-yosyslint/main/repo.json",
        "https://raw.githubusercontent.com/MuratovAS/micro-fzfinder-plugin/main/repo.json"
    ],
    "rmtrailingws": true,
    "scrollbar": true,
    "statusformatl": " $(status.branch) $(filename) $(modified) ",
    "statusformatr": " line:$(line), column:$(col) | $(opt:fileformat) | $(opt:encoding) | ft:$(opt:filetype) ",
    "tabmovement": true
}
